<mvc:View controllerName="br.com.idxtecCentroCusto.controller.CentroCusto"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	height="100%"
	width="100%">
	<App>
		<pages>
			<Page showHeader="false">
				<content>
					<VBox class="sapUiSmallMargin">
						<Panel headerText="Centro de Custo">
							<t:Table id="tableCentroCusto"
								rows="{path: '/CentroCustos'}"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Interactive"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de Centro de Custo"/> 
									</Toolbar>
								</t:toolbar>
								<t:columns>
									<t:Column filterProperty="Codigo" sortProperty="Codigo">
										<Label text="Código"/>
										<t:template>
											<Text text="{Codigo}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Descricao" sortProperty="Descricao">
										<Label text="Descrição"/>
										<t:template>
											<Text text="{Descricao}"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onRefresh"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>
						</Panel>
					</VBox>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" id="incluir" text="Incluir novo" press="onIncluirCentro"/>
						<Button icon="sap-icon://edit" id="editar" text="Editar" press="onEditarCentro"/>
						<Button icon="sap-icon://delete" id="remover" text="Remover" press="onRemoverCentro"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>