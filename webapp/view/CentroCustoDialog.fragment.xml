<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
		id="CentroCustoDialog"
		title="{view>/titulo}"
		class="sapUiSmallMargin">
   	
   		<VBox id="vBoxCentro" class="sapUiSmallMargin">
   			<Label text="Código:" labelFor="codigo"/>
			<Input value="{Codigo}" id="codigo" required="true"/>
			
			<Label text="Descrição:" labelFor="descricao"/>
			<Input value="{Descricao}" id="descricao" required="true"/>
		</VBox>
   		
   		<buttons>
   			<Button text="Salvar" press="onSaveDialog"/>
   			<Button text="Fechar" press="onCloseDialog"/>
   		</buttons>
   </Dialog>
</core:FragmentDefinition>